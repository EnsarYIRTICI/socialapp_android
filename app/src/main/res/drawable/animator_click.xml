<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <objectAnimator
            android:propertyName="alpha"
            android:duration="200"
            android:valueTo="0.5" />
    </item>
    <item>
        <objectAnimator
            android:propertyName="alpha"
            android:duration="200"
            android:valueTo="1.0" />
    </item>
</selector>