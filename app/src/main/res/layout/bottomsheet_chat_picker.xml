<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottomsheet"
    android:padding="50dp"
    >

    <ImageView
        android:id="@+id/contactsGallery"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_contact_notebook"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        />

    <ImageView
        android:id="@+id/documentGallery"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_google_docs"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        />

    <ImageView
        android:id="@+id/videoGallery"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_video_camera"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        />

    <ImageView
        android:id="@+id/photoGallery"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_photos"
        />

</LinearLayout>
