<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_mobile_navigation"
    >

    <fragment
        android:id="@+id/navigation_mobile_navigation"
        android:name="com.edison.mulaki.main.MobileFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_mobile" >

        <action
            android:id="@+id/action_mobile_to_display"
            app:destination="@id/nav_graph_display"

            app:popEnterAnim="@anim/slide_right_zero"
            app:popExitAnim="@anim/slide_right_max"

            app:exitAnim="@anim/slide_left_negative"
            app:enterAnim="@anim/slide_left_zero"
            />

    </fragment>

    <navigation
        android:id="@+id/nav_graph_display"
        app:startDestination="@id/navigation_display">

        <fragment
            android:id="@+id/navigation_display"
            android:name="com.edison.mulaki.main.display.DisplayFragment"
            android:label="@string/title_display"
            tools:layout="@layout/fragment_display"
            >

            <action
                android:id="@+id/action_display_to_chat"
                app:destination="@id/navigation_chat"

                app:popEnterAnim="@anim/slide_right_zero_half"
                app:popExitAnim="@anim/slide_right_max"

                app:exitAnim="@anim/slide_left_negative_half"
                app:enterAnim="@anim/slide_left_zero"
                />

        </fragment>

        <fragment
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/navigation_chat"
            android:name="com.edison.mulaki.main.chat.ChatFragment"
            android:label="Chats"
            tools:layout="@layout/fragment_chat"
            />

    </navigation>


</navigation>